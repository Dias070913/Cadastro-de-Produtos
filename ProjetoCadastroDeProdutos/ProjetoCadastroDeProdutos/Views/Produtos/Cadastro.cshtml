@model ProjetoCadastroDeProdutos.Models.Produto

<h2>Cadastro de Produtos</h2>

<form asp-action="Cadastro" method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="Nome" required />
    </div>
    <div>
        <label>Descricao:</label>
        <input asp-for="Descricao" required />
    </div>
    <div>
        <label>Preco:</label>
        <input asp-for="Preco" type="number" required />
    </div>
    <div>
        <label>Quantidade:</label>
        <input asp-for="Quantidade" type="number" required />
    </div>
    <button type="submit">Novo Produto</button>
</form>